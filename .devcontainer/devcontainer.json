{
	"name": "Lottery Prediction Dev",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000",
			"upgradePackages": true
		},
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
	"remoteEnv": {
		"PYTHONPATH": "${containerEnv:PYTHONPATH}:/workspaces/predicoes-loterias-caixa"
	},
	"remoteUser": "vscode"
}
